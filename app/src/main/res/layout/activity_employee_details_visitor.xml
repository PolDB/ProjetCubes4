<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.employee.EmployeeDetail">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#673AB7"
        app:title="Employee Details"
        app:titleTextColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/materialToolbar2"
        android:layout_marginTop="2dp"
        android:orientation="vertical">



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TableRow>

                <TextView
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/nameDetailVisitor"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:text="Daubrive"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:enabled="false"
                    android:focusable="true"
                    />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/firstname"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/firstnameDetailVisitor"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:text="Paul"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:enabled="false"
                    android:focusable="true"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/phone"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/phoneDetailVisitor"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:text="0625944475"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:enabled="false"
                    android:focusable="true" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/emailDetailVisitor"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:text="pauldaubrive@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:enabled="false"
                    android:focusable="true"
                    />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="service"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/employeeDepartmentDetailVisitor"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:text="Direction"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:background="@android:color/transparent"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:text="site"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/employeeSiteDetailVisitor"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:text="Paris"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:background="@android:color/transparent"/>
            </TableRow>
        </TableLayout>


    </LinearLayout>





</RelativeLayout>